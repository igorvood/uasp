<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <Console name="LogToJSON" target="SYSTEM_OUT">
            <JsonLayout complete="false" compact="false"  objectMessageAsJsonObject="true" />
        </Console>

        <Console name="LogToConsole" target="SYSTEM_OUT">
            <PatternLayout alwaysWriteExceptions="true" pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <!--        <logger level="info">-->
        <!--            <appender-ref ref="LogToJSON" />-->
        <!--        </logger>-->
        <root level="error">
<!--            <appender-ref ref="LogToConsole" />-->
            <appender-ref ref="LogToConsole" />
        </root>
        <logger name="ru.vtb.uasp" level="error">
<!--            <appender-ref ref="LogToConsole" />-->
            <appender-ref ref="LogToConsole" />
        </logger>
    </Loggers>
</Configuration>